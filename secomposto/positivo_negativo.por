programa {
  funcao inicio() {
    
    cadeia numero
    
    escreva("Insira o número para saber se é positivo ou negativo: ")
    leia(numero)
    escreva("\n")

    se (numero <0){escreva("O número ", numero, " é negativo")}
    senao se (numero >0){escreva("O número é positivo")}

    senao se (escreva("Este número é neutro!"))

  }
}
