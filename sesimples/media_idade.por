programa {
  funcao inicio() {
    
    //Declaração
    inteiro i1, i2, i3, i4
    real m

    //Entrada
    escreva("Digite o primeiro valor: ")
    leia(i1)
    escreva("Digite o segundo valor: ")
    leia(i2)
    escreva("Digite o terceiro valor ")
    leia(i3)
    escreva("Digite o quarto valor: ")
    leia(i4)

    //Processamento
    m = (i1 + i2 + i3 + i4)/4

    //Saída
    escreva("A média é: ", m)

  }
}
